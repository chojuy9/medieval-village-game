<?xml version="1.0" encoding="UTF-8"?>
<!--
  buildings.xml — 건물 정의
  비용/생산량/해금 조건 등을 수정해 게임 밸런스를 조정하세요.
-->
<buildings>

  <!-- ===== Tier 1: 기초 자원 ===== -->
  <building id="lumbermill" name="벌목소" category="resource" tier="1">
    <cost wood="10"/>
    <consumption/>
    <production wood="2"/>
    <workers>2</workers>
    <description>원목을 생산합니다</description>
    <unlock/>
  </building>

  <building id="quarry" name="채석장" category="resource" tier="1">
    <cost wood="30"/>
    <consumption/>
    <production stone="1"/>
    <workers>2</workers>
    <description>원석을 생산합니다</description>
    <unlock/>
  </building>

  <building id="farm" name="농장" category="resource" tier="1">
    <cost wood="20" stone="10"/>
    <consumption/>
    <production food="5"/>
    <workers>2</workers>
    <description>곡물을 생산합니다</description>
    <unlock/>
  </building>

  <!-- ===== Tier 1: 주거/공공 ===== -->
  <building id="house" name="집" category="housing" tier="1">
    <cost wood="50" stone="30"/>
    <consumption/>
    <production/>
    <workers>0</workers>
    <effect maxPopulation="5"/>
    <description>최대 인구를 5명 늘립니다</description>
    <unlock/>
  </building>

  <building id="market" name="시장" category="economy" tier="1">
    <cost wood="100" stone="50"/>
    <consumption/>
    <production/>
    <workers>1</workers>
    <effect productionBonus="0.1"/>
    <description>모든 생산량이 증가합니다</description>
    <unlock/>
  </building>

  <building id="church" name="교회" category="civic" tier="1">
    <cost wood="120" stone="80"/>
    <consumption/>
    <production/>
    <workers>1</workers>
    <effect happinessBonus="10"/>
    <description>마을의 안정과 결속을 강화합니다</description>
    <unlock population="15"/>
  </building>

  <building id="tavern" name="주점" category="economy" tier="1">
    <cost wood="30" stone="20" lumber="20"/>
    <consumption/>
    <production gold="2"/>
    <workers>2</workers>
    <description>금화를 생산합니다</description>
    <unlock>
      <requires type="building" id="market" count="1"/>
    </unlock>
  </building>

  <building id="wall" name="성벽" category="civic" tier="1">
    <cost stone="400" gold="100"/>
    <consumption/>
    <production/>
    <workers>0</workers>
    <effect defenseBonus="20"/>
    <description>외부 위협으로부터 마을을 지킵니다</description>
    <unlock>
      <requires type="building" id="quarry" count="3"/>
    </unlock>
  </building>

  <building id="school" name="학교" category="civic" tier="1">
    <cost wood="80" stone="80" lumber="30" gold="80"/>
    <consumption/>
    <production/>
    <workers>2</workers>
    <effect productionBonus="0.05"/>
    <description>전체 생산 효율이 상승합니다</description>
    <unlock>
      <requires type="building" id="church" count="1"/>
    </unlock>
  </building>

  <building id="manor" name="영주관" category="housing" tier="1">
    <cost wood="300" stone="200" gold="150"/>
    <consumption/>
    <production gold="5"/>
    <workers>3</workers>
    <effect maxPopulation="10"/>
    <description>금화 생산과 최대 인구를 크게 늘립니다</description>
    <unlock population="30"/>
  </building>

  <building id="treasury" name="보물창고" category="economy" tier="1">
    <cost wood="200" stone="150" gold="100"/>
    <consumption/>
    <production/>
    <workers>2</workers>
    <effect goldProductionBonus="0.2"/>
    <description>금화 생산 효율이 증가합니다</description>
    <unlock>
      <requires type="building" id="blacksmith" count="1"/>
      <requires type="building" id="market" count="1"/>
    </unlock>
  </building>

  <!-- ===== Tier 2: 가공 ===== -->
  <building id="blacksmith" name="대장간" category="resource" tier="2">
    <cost wood="80" stone="60"/>
    <consumption wood="1" stone="1"/>
    <production tools="0.5" gold="0.3"/>
    <workers>3</workers>
    <description>원목과 원석으로 도구를 만들고 금화를 벌어들입니다</description>
    <unlock>
      <requires type="building" id="quarry" count="1"/>
    </unlock>
  </building>

  <building id="sawmill" name="제재소" category="resource" tier="2">
    <cost wood="60" stone="40"/>
    <consumption wood="2"/>
    <production lumber="1"/>
    <workers>2</workers>
    <description>원목을 가공하여 목재를 생산합니다</description>
    <unlock>
      <requires type="building" id="lumbermill" count="2"/>
    </unlock>
  </building>

  <building id="bakery" name="제빵소" category="resource" tier="2">
    <cost wood="30" stone="20" lumber="10"/>
    <consumption food="3"/>
    <production bread="2"/>
    <workers>2</workers>
    <description>곡물을 가공하여 빵을 생산합니다</description>
    <unlock>
      <requires type="building" id="farm" count="2"/>
    </unlock>
  </building>

  <building id="stonemason" name="석공소" category="resource" tier="2">
    <cost wood="50" stone="60" lumber="15" gold="40"/>
    <consumption stone="2" tools="0.5"/>
    <production stone="1.5"/>
    <workers>2</workers>
    <description>원석을 가공해 고급 석재 생산 효율을 높입니다</description>
    <unlock>
      <requires type="building" id="quarry" count="2"/>
    </unlock>
  </building>

  <!-- ===== Tier 3: 완제품 ===== -->
  <building id="furnitureShop" name="가구공방" category="resource" tier="3">
    <cost wood="100" stone="60" gold="50"/>
    <consumption lumber="2" tools="1"/>
    <production furniture="0.3"/>
    <workers>3</workers>
    <description>목재와 도구로 가구를 생산합니다</description>
    <unlock>
      <requires type="building" id="sawmill" count="1"/>
      <requires type="building" id="blacksmith" count="1"/>
    </unlock>
  </building>

  <building id="weaponShop" name="무기공방" category="resource" tier="3">
    <cost wood="120" stone="80" gold="80"/>
    <consumption lumber="1" tools="2"/>
    <production weapons="0.2"/>
    <workers>3</workers>
    <description>목재와 도구로 무기를 생산합니다</description>
    <unlock population="20">
      <requires type="building" id="sawmill" count="1"/>
      <requires type="building" id="blacksmith" count="1"/>
    </unlock>
  </building>

  <!-- ===== Tier 4: 특수/최고급 ===== -->
  <building id="mint" name="왕립 조폐소" category="economy" tier="4">
    <cost wood="300" stone="200" gold="2000"/>
    <consumption gold="1"/>
    <production gold="10"/>
    <workers>4</workers>
    <description>대량의 금화를 주조합니다</description>
    <unlock tribute="royal"/>
  </building>

  <building id="cathedral" name="대성당" category="civic" tier="4">
    <cost wood="500" stone="400" gold="1500"/>
    <consumption/>
    <production/>
    <workers>3</workers>
    <effect happinessBonus="25" plagueImmunity="true"/>
    <description>마을의 정신적 지주. 역병을 막아줍니다</description>
    <unlock>
      <requires type="building" id="church" count="3"/>
      <requires type="research" id="agriculture"/>
    </unlock>
  </building>

</buildings>
