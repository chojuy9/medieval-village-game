<?xml version="1.0" encoding="UTF-8"?>
<!--
  achievements.xml — 업적 정의
  conditionType 종류:
    stat          → state.stats[key] 값 비교
    population    → state.population[key] 값 비교
    resource      → state.resources[key] 값 비교
    research_count→ 완료된 연구 수 비교
    building_level→ 강화 레벨 비교
    population_tier→ stats.maxPopulation 비교
    seasons_all   → 사계절 모두 경험 여부
    custom        → JS에서 window._AchievementCustomConditions[id] 훅으로 처리
-->
<achievements>

  <!-- ===== 건물 관련 ===== -->
  <achievement id="first_building" name="🏠 첫 발걸음" category="building" icon="🏠">
    <description>첫 건물을 건설했습니다</description>
    <condition type="stat" key="totalBuildingsBuilt" operator=">=" threshold="1"/>
    <reward wood="20"/>
  </achievement>

  <achievement id="village_beginning" name="마을의 시작" category="building" icon="🏗️">
    <description>건물 5개를 건설했습니다</description>
    <condition type="stat" key="totalBuildingsBuilt" operator=">=" threshold="5"/>
    <reward wood="50"/>
  </achievement>

  <achievement id="prosperous_city" name="번영의 도시" category="building" icon="🏙️">
    <description>건물 20개를 건설했습니다</description>
    <condition type="stat" key="totalBuildingsBuilt" operator=">=" threshold="20"/>
    <reward stone="150"/>
  </achievement>

  <achievement id="fortified" name="🏰 요새화" category="building" icon="🏰">
    <description>성벽을 건설했습니다</description>
